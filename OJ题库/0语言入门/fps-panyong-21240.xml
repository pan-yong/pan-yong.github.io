		<solution language="C"><![CDATA[#include<stdio.h>

int main()
{
	float a,b,c,d,e,f;
	scanf("%f%f",&a,&b);
	c=a+b;
	d=a-b;
	e=a*b;
	f=a/b;
	printf("%.2f+%.2f=%.2f\n",a,b,c);
	printf("%.2f-%.2f=%.2f\n",a,b,d);
	printf("%.2f*%.2f=%.2f\n",a,b,e);
	printf("%.2f/%.2f=%.2f\n",a,b,f);
	return 0;
}]]></solution>
